<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center"><h1>New Event</h1></div>	
	</div>
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<form action="/create" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="name">Name</label>
					<input  type="text" id="name" name="name"  class="form-control">
				</div>
				<div class="form-group">
					<label for="price">Date</label>
					<input  type="datetime-local" id="price" name="date"  placeholder="DD-MM-YY HH:MM" class="form-control">
				</div>
				<div class="form-group">
				 	<label for="brand">Location</label>
					<input  type="text" id="brand" name="location"  class="form-control">
				</div>
				<div class="text-center"><button class="btn btn-default">Add event</button></div>				
			</form>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>