<div class="container">
	<div class="row text-center">
		<div class="col-xs-12"></div>
	</div>
	<div class="row">
		<div class="col-xs-4"></div>
		<div class="col-xs-4"><h1 class="text-center">Products List</h1></div>
		<div class="col-xs-4"></div>
	</div>
	<div class="row">
		<div class="col-xs-12"><h1></h1></div>
	</div>
	<div class="row">
		<div class="col-xs-2"></div>
		<div class="col-xs-8">
			<table class="table table-bordered text-left">
			  <tr>
			  	<th class="active">Name</th>
			  	<th class="active">Price</th>
			  	<th class="active">Brand</th>
			  	<th class="active"></th>
			  </tr>
			  <% @products.each do |product|%>
			  	<tr>
			  		<td><%= product.name %></td>
			  		<td><%= product.price %></td>
			  		<td><%= product.brand %></td>
			  		<td class="text-center">
			  		<div class="row">
			  			<div class="col-xs-1"></div>
			  			<div class="col-xs-2"><a href="/remove/<%= product.id %>">Remove</a></div>
			  			<div class="col-xs-1"></div>
			  			<div class="col-xs-2"><a href="/show/<%= product.id %>">Details</a></div>
			  			<div class="col-xs-1"></div>
			  			<div class="col-xs-2"><a href="/edit/<%= product.id %>">Edit</a></div>
			  			<div class="col-xs-1"></div>
			  		</div>			  			
			  		</td>
			  	</tr>

			  <% end %>

			</table>
		</div>
		<div class="col-xs-2"></div>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center"><h3>New Product</h3></div>
	</div>
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<form action="/new" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="name">Name</label>
					<input  type="text" id="name" name="name"  class="form-control">
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input  type="text" id="price" name="price"  class="form-control">
				</div>
				<div class="form-group">
				 	<label for="brand">Brand</label>
					<input  type="text" id="brand" name="brand"  class="form-control">
				</div>
				<div class="form-group">	
					<label for="details">Details</label>
					<textarea name="details" id="details" rows="4" cols="50"  class="form-control"></textarea> 
				</div>
				<div class="text-center"><button class="btn btn-default">Add new</button></div>				
			</form>
		</div>
		<div class="col-xs-3"></div>
	</div>
	<div class="row">
		<div class="col-xs-12"><h1></h1></div>
	</div>
</div>